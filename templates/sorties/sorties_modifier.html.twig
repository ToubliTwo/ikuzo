{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}


{% block body %}
    <h1>Modifier une sortie</h1>
    <div class="formulaires">
        <div class="colonne">
            {{ form_start (sortieForm) }}
            {{ form_row(sortieForm.titre) }}
            {{ form_row(sortieForm.date) }}
            {{ form_row(sortieForm.nombreDePlaces) }}
            {{ form_row(sortieForm.duree) }}
            {{ form_row(sortieForm.description) }}
        </div>
        <div class="colonne">
            {{form_widget (sortieForm)}}
            <div class="submit"><button type="submit">Valider</button></div>
            {{ form_end(sortieForm) }}
        </div>
    </div>
{% endblock %}


