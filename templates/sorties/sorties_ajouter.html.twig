{% extends 'base.html.twig' %}
{% block title %} Créer une évènement {% endblock %}

{% block body %}
        <h1>Créer une sortie</h1>
    <div class="formulaire_bloc">
    <div class="formulaires">
            <div class="colonne">
               {{ form_start (sortieForm) }}
               {{ form_row(sortieForm.titre) }}
               {{ form_row(sortieForm.date) }}
               {{ form_row(sortieForm.nombreDePlaces) }}
               {{ form_row(sortieForm.duree) }}
               {{ form_row(sortieForm.description) }}
            </div>
            <div class="colonne">
                 {{form_widget (sortieForm)}}
            </div>
        </div>
    </div>
            <div class="nosBoutons">

               <div class="submitValider">
                   <button type="submit" title="Valider la sortie" name="clickSurValider">Valider</button>
               </div>

                <div class="submitPublier">
                    <button type="submit"  title="Publier la sortie" name="clickSurPublier">Publier</button>
{#                    onclick="window.location.href='{{ path('sorties_publie')}}'"#}
                </div>
               {{ form_end(sortieForm) }}

                <div class="submitAnnuler">
                    <a href="{{ path('main_home') }}">Annuler</a>
                </div>
            </div>
{% endblock %}








