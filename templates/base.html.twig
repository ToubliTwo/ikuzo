<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Sortir.com{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/touktouk.png') }}">
{#        <link rel="icon" href="{{ asset('img/LogoProjetSortir.webp') }}">#}

{#        ajout d'un lien vers fontawesome#}
        <script src="https://kit.fontawesome.com/f8c7cb437f.js" crossorigin="anonymous"></script>


        {# insertion d'une police d'écriture googlefonts (type cdn) : #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=swap" rel="stylesheet">

        {# insertion d'une feuille de style CSS qui permet de "gommer" toutes les différences d'un navigateur à l'autre #}
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">

        {# insertion d'une feuille de style CSS #}
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">

{#        import BOOTSTRAP#}
{#        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">#}

    </head>
    <body>
        <header class="contenuDuHeader">
               <a class="zoom" href="{{ path('main_home') }}"><img class="logo" src="{{ asset('img/LogoProjetSortir.webp') }}" alt="Ikouzo !"></a>
               {%  include('inc/nav.html.twig') %}
        </header>
        <main>
            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
        <footer>
          {%  include('inc/footer.html.twig') %}
        </footer>
    </body>
</html>
